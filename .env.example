PEXELS_API_KEY= # Get your free API key from https://www.pexels.com/api/

# Cloudinary Configuration (required for Render deployment with auto-upload)
CLOUDINARY_CLOUD_NAME= # your cloudinary cloud name
CLOUDINARY_API_KEY= # your cloudinary api key
CLOUDINARY_API_SECRET= # your cloudinary api secret

LOG_LEVEL=info # trace, debug, info, warn, error, fatal, silent
WHISPER_VERBOSE=false
PORT=10000 # Render uses port 10000, local dev can use 3123
DEV=true # local development mode
DATA_DIR_PATH= # only for docker, otherwise leave empty

# Docker Environment Variables (optimized for Render free tier)
DOCKER=true
WHISPER_MODEL=tiny.en
KOKORO_MODEL_PRECISION=q4
CONCURRENCY=1
VIDEO_CACHE_SIZE_IN_BYTES=209715200 # 200MB (reduced from 2GB for memory optimization)
NODE_OPTIONS=--max-old-space-size=400 # Limit Node.js memory to 400MB